{
  "extends": "@tsconfig/node12/tsconfig.json",

  "compilerOptions": {
    "rootDir": "src",
    "outDir": "dist",

    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true
  }
}
